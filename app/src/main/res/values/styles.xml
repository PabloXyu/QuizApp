    <!-- Base application theme. -->
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/QuizActionBarStyle</item>
    </style>
    <style name="QuizActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/QuizTitleTextStyle</item>
    </style>
    <style name="QuizTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
